\ProvidesPackage{\PathToTumTemplate/tum_colors}[2017/04/30 TUM Coorporate Design Colors]


%% Process package options
%% ----------------------------------------------------------------------

% Package Options: digital (default), print
\newif\ifdigitalcolors\digitalcolorstrue
\DeclareOption{digital}{\digitalcolorstrue}
\DeclareOption{print}{\digitalcolorsfalse}

% pass unknown options to package xcolor
\DeclareOption*{%
	\PassOptionsToClass{\CurrentOption}{xcolor}%
}

% process options
\ProcessOptions\relax


%% Load xcolor package iff not loaded already
%% ----------------------------------------------------------------------
\RequirePackage{xcolor}

% define command to provide colors iff not provided (backward compatibility)
\makeatletter
\providecommand{\providecolor}[3]{%
  \@ifundefinedcolor{#1}{\definecolor{#1}{#2}{#3}}{}}
\makeatother

% select color model based on option (RGB default)
\ifdigitalcolors
	\selectcolormodel{RGB}   % digital colors
\else
	\selectcolormodel{cmyk}  % print colors
\fi


